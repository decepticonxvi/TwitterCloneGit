extends layouts/login-layout.pug

block content
    .login-screen.flex
        .login-mangools
            .login-mangools__bg--small.relative.flex.flex-col.items-center
            // Shape
            .flex.shape-top
                svg#blobSvg.shape-top__big(viewbox='0 0 500 500' xmlns='http://www.w3.org/2000/svg' width='100%')
                defs
                    lineargradient#gradient(x1='0%' y1='0%' x2='0%' y2='100%')
                    stop(offset='0%' style='stop-color: rgb(255, 95, 109)')
                    stop(offset='100%' style='stop-color: rgb(255, 195, 113)')
                path#blob(d='M429.5,291.5Q364,333,341.5,398.5Q319,464,249,466.5Q179,469,116.5,431Q54,393,71,321.5Q88,250,98.5,199Q109,148,142.5,84.5Q176,21,246,34Q316,47,352.5,98Q389,149,442,199.5Q495,250,429.5,291.5Z' fill='url(#gradient)')
            // End Shape
            .login-mangools__logo
                //- img(src='/images/profilePic.jpeg' style='height: 2.25rem' alt='')
                p.footer__text WOD:Wars Of Desire
            h2 Welcome Back
            .login-mangools__card
                form#registerForm.flex.flex-col(method="post", onsubmit="event.preventDefault(); validateForm();")
                    h1 #{errorMessage}
                    .flex.flex-col.card__list(for='')
                        span.card__label First Name
                        label.relative(for='')
                        span.absolute.card__icon
